<!DOCTYPE html>
<html>
<head>
  <title>Livelist</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if logged_in? %>
  <p>logged in as <%= current_user.username %></p>
  <% end %>

  <nav>
    <ul>
      <li><%= link_to 'home', root_path %></li>
      <% if logged_in? %>
      <li><%= link_to 'logout', logout_path, :method => :delete, :data => { :confirm => 'are you sure?' } %></li>
      <% else %>
      <li><%= link_to 'login', login_path %></li>
      <% end %>
    </ul>
  </nav>

  <nav>
    <ul>
      <li><%= link_to 'Newsfeed', root_path %></li>
      <li><%= link_to 'Browse Global', browse_global_path %></li>
      <li><%= link_to 'My livelists', manage_lists_path %></li>
      <li><%= link_to 'Friends', friends_path %></li>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
