<div class="goal_container">
  <h1>Update account details</h1>

  <div class="update_form">
    <%= form_for @user do |f| %>
      <p>
        <%= f.label :display_name, 'Full Name' %>
        <%= f.text_field :display_name, :required => true %>
      </p>
      <p>
        <%= f.label :email %>
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :profile_image_url, 'Profile picture' %>
        <%= f.file_field :profile_image_url %>
      </p>
      <p>
        <%= f.label :cover_image_url, 'Cover picture' %>
        <%= f.file_field :cover_image_url %>
      </p>

      <button>Update</button>
    <% end %>

  </div>
</div>

