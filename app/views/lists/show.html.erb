<div class="manage_list_container">
  <h1><%= @list.name %></h1>

  <div class="to_do_list">
    <h3>To Do:</h3>

    <% @goals_to_do.each do |goal| %>
      <div class="goal_item">
        <div class="goal_text">
          <a class="check_box" href="/goals/<%= goal.id %>/completed">
            <i class="fa fa-square"></i>
            <i class="fa fa-check-square"></i>
          </a>
          <p><%= goal.text %></p>
        </div>
        <div class="adjust_goal">
          <a href="/goals/<%= goal.id %>/edit"><i class="fa fa-pencil-square-o"></i> edit</a>
          <p><i class="fa fa-trash"></i> <%= link_to 'delete', goal, :method => :delete %></p>
        </div>
      </div>
    <% end %>
    <% if @goals_to_do.count == 0 %>
      <p>You don't have any goals to do in this list. Create some of your own or look around to gain some inspiration.</p>
    <% end %>
    <div class="new_goal_button">
      <%= link_to 'Add new goal', new_goal_path %>
    </div>
  </div>

  <div class="achievements">
    <h3>Done:</h3>
    <% @goals_completed.each do |goal| %>
      <div class="activity">
        <div class="show_image">
          <%= link_to image_tag(goal.image_url), goal %>
        </div>
        <div class="photo_info">
          <p class="handwritten"><i class="fa fa-check-square"></i> <%= goal.text %></p>
          <div class="update_goal">
            <p><a href="/goals/<%= goal.id %>/edit"><i class="fa fa-pencil-square-o"></i> edit</a></p>
            <p><i class="fa fa-trash"></i> <%= link_to 'delete', goal, :method => :delete, :data => { :confirm => 'are you sure you want to delete this goal?' } %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


