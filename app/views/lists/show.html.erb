<div class="manage_list_container">
  <h1><%= @list.name %></h1>
    <p><%= link_to 'back', lists_path %></p>

  <div class="to_do_list">
    <h3>to do:</h3>

    <% @goals_to_do.each do |goal| %>
    <p><a href="/goals/<%= goal.id %>/completed"><i class="fa fa-square"></i></a> <%= goal.text %></p>

    <%= link_to 'edit', edit_goal_path(goal) %>
    <p><%= link_to 'delete', goal, :method => :delete, :data => { :confirm => 'are you sure you want to delete this goal?' } %></p>
    <br>
    <% end %>

    <p><%= link_to 'new goal', new_goal_path %></p>
  </div>



  <div class="achievements">
    <p>Goals completed</p>
    <% @goals_completed.each do |goal| %>
      <div class="activity">
        <div class="show_image">
          <img src="<%= goal.image_url %>" alt="">
        </div>
        <div class="photo_info">

          <p><i class="fa fa-check-square"></i> <%= goal.text %></p>
        </div>
      </div>

    <p><%= link_to 'show', goal %></p>
    <p><%= link_to 'edit', edit_goal_path(goal) %></p>
    <p><%= link_to 'delete', goal, :method => :delete, :data => { :confirm => 'are you sure you want to delete this goal?' } %></p>

    <% end %>
  </div>

</div>


